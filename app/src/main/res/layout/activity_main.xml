<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextOtherBills"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="111dp"
        android:ems="10"
        android:hint="@string/other_bill_s_total"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOtherBills"
        tools:ignore="DuplicateSpeakableTextCheck,LabelFor,MissingConstraints" />

    <TextView
        android:id="@+id/textViewOtherBills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/other_bill_s_total"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.753" />

    <Button
        android:id="@+id/buttonOtherBills"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="490dp"
        android:text="@string/save_and_remind"
        app:layout_constraintBottom_toBottomOf="@+id/editTextOtherBills"
        app:layout_constraintStart_toEndOf="@+id/editTextOtherBills"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>